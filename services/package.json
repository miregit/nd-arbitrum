{
  "name": "arbitrum-services",
  "private": true,
  "version": "1.0.0",
  "description": "arbitrum services",
  "scripts": {
    "lint": "eslint **/src/** --ext .ts --ext .tsx --max-warnings=0",
    "lint:fix": "eslint **/src/** --ext .ts --ext .tsx --fix",
    "postinstall": "yarn clean && yarn openapi && make -e build-and-copy-contracts",
    "clean": "rimraf ./dist",
    "openapi": "openapi-generator-cli generate -i ../openapi/api-calls.yml -g typescript-axios -o libs/common/src/generated-sources/openapi --additional-properties=enumPropertyNaming=original,enumNameSuffix=enum,supportsES6=true,withInterfaces=true,withSeparateModelsAndApi=true,modelPackage=model,apiPackage=api",
    "license-report": "./node_modules/.bin/license-report-recursive --recurse --only=prod --html.cssFile=./node_modules/license-report/defaultHtmlStyle.css --fields=name --fields=installedVersion --fields=author --fields=licenseType --fields=link  --output=html > license-report.html",
    "generate-api-docs": "redocly build-docs ../openapi/api-calls.yml -o ../doc/nd-demo-api.html",
    "prestart:": "echo dsffdg",
    "start:api:sepolia": "BLOCKCHAIN_NETWORK_NAME=sepolia NODE_ENV=local nest start api",
    "start:api:hardhatnode": "BLOCKCHAIN_NETWORK_NAME=hardhatnode NODE_ENV=local nest start api",
    "start:deploy-contracts:sepolia": "BLOCKCHAIN_NETWORK_NAME=sepolia NODE_ENV=local nest start deploy-contracts",
    "start:deploy-contracts:hardhatnode": "BLOCKCHAIN_NETWORK_NAME=hardhatnode NODE_ENV=local nest start deploy-contracts",
    "start:npl-event-consumer:sepolia": "BLOCKCHAIN_NETWORK_NAME=sepolia NODE_ENV=local nest start npl-event-consumer",
    "start:npl-event-consumer:hardhatnode": "BLOCKCHAIN_NETWORK_NAME=hardhatnode NODE_ENV=local nest start npl-event-consumer",
    "start:npl-event-publisher:sepolia": "BLOCKCHAIN_NETWORK_NAME=sepolia NODE_ENV=local nest start npl-event-publisher",
    "start:npl-event-publisher:hardhatnode": "BLOCKCHAIN_NETWORK_NAME=hardhatnode NODE_ENV=local nest start npl-event-publisher",
    "start:blockchain-event-reader:sepolia": "BLOCKCHAIN_NETWORK_NAME=sepolia NODE_ENV=local nest start blockchain-event-reader",
    "start:blockchain-event-reader:hardhatnode": "BLOCKCHAIN_NETWORK_NAME=hardhatnode NODE_ENV=local nest start blockchain-event-reader",
    "build:api": "nest build api",
    "build:npl-event-consumer": "nest build npl-event-consumer",
    "build:blockchain-event-reader": "nest build blockchain-event-reader",
    "build:deploy-contracts": "nest build deploy-contracts",
    "build:npl-event-publisher": "nest build npl-event-publisher",
    "build": "yarn build:api && yarn build:npl-event-consumer && yarn build:npl-event-publisher && yarn build:deploy-contracts && yarn build:blockchain-event-reader"
  },
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.3.0",
    "@ethersproject/abstract-signer": "^5.7.0",
    "@nestjs/axios": "^1.0.1",
    "@nestjs/common": "^9.2.1",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.2.1",
    "@nestjs/microservices": "^9.2.1",
    "@nestjs/mongoose": "^9.2.1",
    "@nestjs/platform-express": "^9.2.1",
    "@nestjs/schedule": "^4.0.0",
    "@nestjs/terminus": "^9.1.4",
    "@nestjs/typeorm": "^9.0.1",
    "@typechain/ethers-v5": "^11.1.2",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "axios": "^1.2.2",
    "ethers": "^6.13.1",
    "eventsource": "^2.0.2",
    "jsonwebtoken": "^9.0.2",
    "jwk-to-pem": "^2.0.5",
    "nest-commander": "^3.13.0",
    "nestjs-pino": "^3.1.2",
    "pg": "^8.11.3",
    "pino-http": "^8.3.1",
    "pino-pretty": "^9.1.0",
    "prom-client": "^15.1.2",
    "typechain": "^8.3.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.4.2",
    "@nestjs/schematics": "^9.2.0",
    "@nestjs/testing": "^10.2.6",
    "@openapitools/openapi-generator-cli": "^2.5.2",
    "@redocly/cli": "^1.9.0",
    "@types/cron": "^2.0.0",
    "@types/eventsource": "^1.1.10",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/jwk-to-pem": "^2.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "concurrently": "^7.6.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.1.0",
    "jest": "^29.1.2",
    "license-report-recursive": "^6.2.0",
    "prettier": "^2.8.2",
    "rimraf": "^4.0.4",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "maxWorkers": 1,
    "testTimeout": 20000,
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps",
      "<rootDir>/libs"
    ],
    "moduleNameMapper": {
      "^@nd-demo/common(|/.*)$": "<rootDir>/libs/common/src/$1"
    }
  }
}
